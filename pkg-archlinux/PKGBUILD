pkgbase=kamil-scripts
pkgname=kamil-scripts
pkgver=0.2.4.r9.gba435b6
pkgrel=1
epoch=
pkgdesc=""
arch=( "any" )
url="https://github.com/Kamilcuk/kamil-scripts"
license=('GPL')
groups=()
depends=( "bash>=4" "run-parts" )
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=( etc/bash_completion.d/kamil-scripts.sh etc/rc-local/01-example-script )
options=()
install=$pkgname.install
changelog=
source=( "${pkgname}::git+${url}.git" )
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
	cd "$pkgname"
	git describe --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}
package() {
	cp -a "$pkgname"/* "$pkgdir"
	chown -R root:root "$pkgdir"
}
