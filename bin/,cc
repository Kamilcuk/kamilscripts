#!/bin/bash

_cc() {
	"${prefix:-}"${CC:-gcc} "$@"
}

C_show_predefined_macros_verbose() (
	set -x
	_cc -E -dN - </dev/null
)

C_show_predefined_macros() (
	set -x
	_cc -E -dM - </dev/null
)

. L_lib.sh L_argparse \
	-- -c --cc dest=CC \
	-- -a --arm-none action=prefix=arm-none-eabi- \
	-- -p --prefix \
	-- call=function prefix=C_ ---- "$@"
