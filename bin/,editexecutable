#!/bin/bash

if (($# == 1)) && [[ "$1" == "--bash-completion" ]]; then
	complete -c "$(basename "$BASH_SOURCE")"
	return
fi

name=$(basename "$0")
usage() {
		cat <<EOF
Usage: $name executablefile

Edit executable file.
EOF
}

if (($# == 0)); then
	usage
	exit 1
fi
if ! l=$(whereis -b "$1"); then
	echo "$name: ERROR: No executable found";
	exit 1
fi
l=$(<<<"$l" awk '{print $2}')
if [[ -z "$l" ]]; then
	echo "$name: ERROR: No executable found 2";
	exit 1
fi
set -x
${EDITOR:-vim} "$l"
