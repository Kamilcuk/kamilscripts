{
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [],
  "coc.preferences.semanticTokensHighlights": false,
  "diagnostic.signOffset": 2,
  "diagnostic.errorSign": "âœ˜",
  "diagnostic.warningSign": "âš ",
  "diagnostic.infoSign": "ðŸ›ˆ",
  "diagnostic.hintSign": "â˜¡",
  "diagnostic.displayByAle": false,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.refreshAfterSave": false,
  "diagnostic.checkCurrentLine": false,
  "diagnostic.virtualTextPrefix": " â‡’â‡’â‡’ ",
  "diagnostic.virtualText": true,
  "suggest.triggerCompletionWait": 1000,
  "codeLens.enable": true,
  "solargraph.checkGemVersion": false,
  "clangd.semanticHighlighting": true,
  "clangd.enabled": true,
	"clangd.fallbackFlags": [
		"-std=c++2a"
	],
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "-j=4",
    "--completion-style=detailed",
    "--pch-storage=memory"
  ],
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "email": "languagetool",
    "markdown": [
      "write-good",
      "markdownlint"
    ],
    "sh": "shellcheck",
    "elixir": [
      "mix_credo",
      "mix_credo_compile"
    ],
    "eelixir": [
      "mix_credo",
      "mix_credo_compile"
    ],
    "php": [
      "phpstan",
      "psalm"
    ],
    "yaml": [
      "yamllint",
      "ansible-lint"
    ],
    "cmake": [
      "cmake-lint",
      "cmakelint"
    ],
    "systemd": "systemd-analyze"
  },
  "diagnostic-languageserver.linters": {
    "yamllint": {
      "args": [
        "-d",
        "{extends: relaxed, rules: {line-length: {max: 120}}, truthy: allowed-values: [\"yes\", \"true\", \"no\", \"false\"]}",
        "-f",
        "parsable",
        "-"
      ]
    },
    "shellcheck": {
      "args": [
        "-x",
        "--format",
        "json1",
        "-"
      ]
    },
    "systemd-analyze": {
      "command": "systemd-analyze",
      "debounce": 100,
      "args": [
        "verify",
        "%filepath"
      ],
      "isStdout": false,
      "isStderr": true,
      "sourceName": "systemd-analyze",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:((\\d+):)?\\s*(.*)$",
        {
          "line": 2,
          "message": 3
        }
      ]
    },
    "cmakelint": {
      "command": "cmakelint",
      "debounce": 100,
      "args": [
        "%filepath"
      ],
      "offsetLine": 0,
      "offsetColumn": 1,
      "sourceName": "cmakelint",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+): (.*)$",
        {
          "line": 1,
          "message": 2
        }
      ]
    },
    "cmake-lint": {
      "command": "cmake-lint",
      "debounce": 100,
      "args": [
        "%filepath"
      ],
      "offsetLine": 0,
      "offsetColumn": 1,
      "sourceName": "cmake-lint",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+)(,(\\d+))?: (\\[(.).*)$",
        {
          "line": 1,
          "column": 3,
          "message": 4,
          "security": 5
        }
      ],
      "securities": {
        "C": "info",
        "R": "info",
        "W": "warning",
        "E": "error"
      }
    },
    "ansible_lint": {
      "command": "ansible-lint",
      "args": [
        "--nocolor",
        "--parseable-severity",
        "-w",
        "%file"
      ],
      "rootPatterns": [
        "ansible.cfg",
        ".git"
      ],
      "sourceName": "ansible-lint",
      "formatPattern": [
        "^([^:]+):(\\d+):\\s*(\\S+\\s*)\\[(\\S+?)\\]\\s*(.*)$",
        {
          "sourceName": 1,
          "sourceNameFilter": true,
          "line": 2,
          "security": 4,
          "message": [
            3,
            5
          ]
        }
      ],
      "securities": {
        "VERY_HIGH": "error",
        "HIGH": "warning",
        "MEDIUM": "warning",
        "LOW": "info",
        "VERY_LOW": "hint",
        "INFO": "hint"
      }
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "dart": "dartfmt",
    "elixir": "mix_format",
    "eelixir": "mix_format",
    "python": [
      "black",
      "isort"
    ],
    "lua": "lua-format",
    "sh": "shfmt",
    "blade": "blade-formatter",
    "cmake": "cmake-format"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": [
        "-i",
        "2",
        "-bn",
        "-ci",
        "-sr"
      ]
    },
    "cmake-format": {
      "command": "cmake-format",
      "args": [
        "-"
      ]
    }
  },
  "yaml.customTags": [
    "!reference sequence"
  ]
}
